{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",  // Path to g++.exe
            "args": [
                "-fdiagnostics-color=always",
                "-g",  // For debugging
                "${file}",  // The file you're currently working on
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // Output .exe file in same folder
            ],
            "options": {
                "cwd": "${fileDirname}"  // Working directory
            },
            "problemMatcher": ["$gcc"],  // Problem matcher to catch errors
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}

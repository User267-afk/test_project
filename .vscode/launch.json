{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",  // Path to executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",  // Ensure gdb is located here
            "preLaunchTask": "C/C++: g++.exe build active file",  // Correct task name
            "miDebuggerArgs": "",
            "logging": {
                "engineLogging": false
            }
        }
    ]
}
